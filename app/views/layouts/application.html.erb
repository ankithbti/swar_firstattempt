<!DOCTYPE html>
<html>
<head>
  <title>स्वर ♪ ♫ &#124; My Inner Voice</title>
  	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="<%= root_url %>">Swar</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="#">About</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <% Tag.all.each do |tag| %>
                    <li><%= link_to tag.name, tag %></li>
                    <!-- <li class="divider"></li> -->
                  <% end %>
                </ul>
              </li>
              <li><a href="#contact">Contact</a></li>
            </ul>
            <!-- <form class="navbar-search pull-left" action="" method="get">
                      <input type="text" class="search-query span2" placeholder="Search">
            </form> -->

            <form class="navbar-search pull-left" action="<%= posts_path %>" method="get">
                    <%= text_field_tag :search, params[:search], class: 'search-query span2', placeholder: "Search", autocomplete: "off"  %>
            </form>
            <form class="navbar-form pull-right">
              <input class="span2" type="text" placeholder="Email">
              <input class="span2" type="password" placeholder="Password">
              <button type="submit" class="btn">Sign in</button>
            </form>
            <div class="clearfix"></div>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">×</a>
          <%= msg %>
        </div>
      <% end %>
      <div class="row">
        <%= yield %>
      </div>
    </div>

</body>
</html>
